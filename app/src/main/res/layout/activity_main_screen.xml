        android:background="@android:color/black"

        android:foregroundGravity="center_horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_margin="0dp"
            android:src="@drawable/logo"/>
    </android.support.v7.widget.Toolbar>-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/mainToolbar"
        android:padding="9dp"
        android:background="@android:color/black"
        android:src="@drawable/logo"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainToolbar"
        android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:id="@+id/rlChooseType"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="@dimen/activity_horizontal_margin"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llCategory"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
        <ImageView
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:src="@drawable/type_auto"
            android:layout_marginTop="20dp"

            android:id="@+id/ivCategory"
            android:padding="0dp"
            android:scaleType="fitStart"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:drawablePadding="0dp"
                android:fontFamily="sans-serif"
                android:id="@+id/tvCategory"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="Auto"
                android:drawableRight="@drawable/ic_arrow_down"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llSubCategory"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
        <ImageView
            android:layout_width="134dp"
            android:layout_height="56dp"
            android:src="@drawable/sedan"
            android:scaleType="fitEnd"
            android:id="@+id/ivSubcategory"
            android:padding="0dp"/>
            <TextView
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingTop="6dp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:id="@+id/tvSubCategory"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="Sedan"
                android:drawableRight="@drawable/ic_arrow_right"
                android:drawableLeft="@drawable/ic_arrow_left"/>
        </LinearLayout>
    </RelativeLayout>

    <com.example.geekteam.mr_iwash.ExpandableHeightGridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:id="@+id/gvPackages"
        android:layout_below="@id/rlChooseType"
        android:isScrollContainer="false"
        android:clickable="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_pack"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gvPackages"
        android:background="@color/orangeAccent"
        android:id="@+id/btnBookNow"
        android:text="@string/book_now"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"


        />
    </RelativeLayout>

</RelativeLayout>
</ScrollView>